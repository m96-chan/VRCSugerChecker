{
  "discord": {
    "enabled": false,
    "webhook_url": "https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN",
    "username": "VRChat Sugar Checker",
    "avatar_url": "",
    "notifications": {
      "vrchat_started": true,
      "vrchat_stopped": true,
      "instance_info": true,
      "instance_changed": true,
      "user_joined": false,
      "user_left": false
    }
  },
  "monitoring": {
    "check_interval": 5,
    "log_update_interval": 30
  },
  "audio": {
    "enabled": false,
    "device_name": null,
    "format": "wav",
    "auto_start": true,
    "auto_stop": true,
    "retention_days": 7
  },
  "logs": {
    "retention_days": 7,
    "text_logs": true,
    "audio_logs": true
  },
  "screenshot": {
    "enabled": false,
    "on_vrchat_start": false,
    "on_instance_change": true,
    "auto_capture": true,
    "auto_capture_interval": 180,
    "retention_days": 7,
    "notify_discord": true
  },
  "upload": {
    "enabled": false,
    "upload_on_exit": true,
    "daily_upload": true,
    "expires": "1w",
    "cleanup_after_upload": true,
    "notify_discord": true
  },
  "ai": {
    "enabled": false,
    "openai_api_key": "YOUR_OPENAI_API_KEY",
    "image_analysis": {
      "enabled": false,
      "model": "gpt-4o",
      "analyze_on_upload": false,
      "analyze_screenshots": true
    },
    "audio_analysis": {
      "enabled": false,
      "transcription_model": "whisper-1",
      "analysis_model": "gpt-4o",
      "analyze_on_upload": false,
      "min_duration_seconds": 60,
      "preprocessing": {
        "enabled": true,
        "min_speech_ratio": 0.1,
        "noise_tolerance_db": -40.0,
        "silence_duration_seconds": 1.0
      }
    }
  }
}
