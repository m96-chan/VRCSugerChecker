{
  "discord": {
    "webhooks": [
      {
        "name": "main",
        "enabled": false,
        "webhook_url": "https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN",
        "username": "VRChat Sugar Checker",
        "avatar_url": "",
        "notifications": {
          "vrchat_started": true,
          "vrchat_stopped": true,
          "instance_info": true,
          "instance_changed": true,
          "user_joined": false,
          "user_left": false,
          "screenshot": true,
          "avatar_detection": true,
          "upload": true,
          "audio_analysis": false
        }
      }
    ],
    "bot": {
      "enabled": false,
      "token": "YOUR_BOT_TOKEN",
      "command_prefix": "!",
      "text_channel_id": null,
      "voice_enabled": true,
      "auto_join_voice": false
    }
  },
  "monitoring": {
    "check_interval": 5,
    "log_update_interval": 30
  },
  "audio": {
    "enabled": false,
    "device_name": null,
    "format": "wav",
    "auto_start": true,
    "auto_stop": true,
    "retention_days": 7,
    "split_interval_seconds": 3600,
    "debug": {
      "keep_source_files": false
    }
  },
  "logs": {
    "retention_days": 7,
    "text_logs": true,
    "audio_logs": true
  },
  "screenshot": {
    "enabled": false,
    "on_vrchat_start": false,
    "on_instance_change": true,
    "auto_capture": true,
    "auto_capture_interval": 180,
    "retention_days": 7,
    "avatar_detection": {
      "enabled": false,
      "interval": 5,
      "sensitivity": 0.10,
      "mode": "advanced",
      "consecutive_frames": 6,
      "hold_seconds": 6.0,
      "flow_min": 0.15,
      "base_score_threshold": 0.45,
      "warmup_frames": 30
    }
  },
  "upload": {
    "enabled": false,
    "upload_on_exit": true,
    "daily_upload": true,
    "cleanup_after_upload": true
  },
  "ai": {
    "enabled": false,
    "openai_api_key": "YOUR_OPENAI_API_KEY",
    "image_analysis": {
      "enabled": false,
      "model": "gpt-4o",
      "analyze_on_upload": false,
      "analyze_screenshots": true
    },
    "audio_analysis": {
      "enabled": false,
      "transcription_model": "whisper-1",
      "analysis_model": "gpt-4o",
      "analyze_on_upload": false,
      "min_duration_seconds": 60,
      "preprocessing": {
        "enabled": true,
        "min_speech_ratio": 0.1,
        "noise_tolerance_db": -40.0,
        "silence_duration_seconds": 1.0
      }
    }
  }
}
